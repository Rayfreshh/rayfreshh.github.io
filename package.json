{
  "name": "etiosa-raymond-portfolio",
  "version": "2.0.0",
  "description": "Professional portfolio website for Etiosa Raymond - AI/ML Engineer & Smart Systems Specialist",
  "main": "js/modules/main.mjs",
  "type": "module",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:legacy": "node build.js",
    "preview": "npm run build && npx serve dist",
    "lint": "eslint js/**/*.{js,mjs}",
    "lint:fix": "eslint js/**/*.{js,mjs} --fix",
    "format": "prettier --write \"**/*.{js,mjs,css,html,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "analyze": "webpack-bundle-analyzer dist/js/*.js",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "deploy": "npm run build && gh-pages -d dist",
    "start": "npm run dev"
  },
  "keywords": [
    "portfolio",
    "ai",
    "machine-learning",
    "computer-vision",
    "smart-systems",
    "engineering",
    "web-development"
  ],
  "author": {
    "name": "Etiosa Raymond",
    "email": "samsonraymond63@yahoo.com",
    "url": "https://etiosaraymond.github.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/etiosaraymond/etiosaraymond.github.io.git"
  },
  "homepage": "https://etiosaraymond.github.io",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.0",
    "@babel/plugin-proposal-private-methods": "^7.18.0",
    "@babel/preset-env": "^7.22.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^9.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.8.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "gh-pages": "^5.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "lighthouse": "^10.2.0",
    "mini-css-extract-plugin": "^2.7.0",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "prettier": "^2.8.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "core-js": "^3.31.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,mjs}"
    ],
    "collectCoverageFrom": [
      "js/**/*.{js,mjs}",
      "!js/**/*.min.js",
      "!js/vendor/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}